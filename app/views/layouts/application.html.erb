<!DOCTYPE html>
<html>
  <head>
    <title>Cloudnine</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link href="https://fonts.googleapis.com/css2?family=Exo:ital,wght@0,500;0,600;1,500;1,600&display=swap" rel="stylesheet"> 
  </head>
  <body>
    <nav class="navbar navbar-inverse navbar-top navbar-fixed-top">
      <div class="container-fluid">
        <div class="container">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">Cloudnine</a>
          </div>
          <div id="navbar" class="navbar-collapse collapse">
            <% if user_signed_in? %>
              <ul class="nav navbar-nav">
                <li><a href="/playlist">My playlist</a></li>
                <li><a href="/charts">Charts</a></li>
                <% if current_user.admin? %>
                  <li><a href="/admin">Admin stats</a></li>
                <% end %>
              </ul>
            <% end %>
            <ul class="nav navbar-nav navbar-right">
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Profile <span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <% if user_signed_in? %>
                    <li><%= link_to "Preferences", preferences_path %></li>
                    <li role="separator" class="divider"></li>
                    <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
                  <% else %>
                    <li><%= link_to "Sign in with Spotify", user_spotify_omniauth_authorize_path %></li>
                  <% end %>
                </ul>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </nav>
    <div id="main-container" class="container">
      <%= yield %>
    </div>
  </body>
</html>
