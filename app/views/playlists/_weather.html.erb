<% if location %>
  <div class="weather" data-js-weather="<%= location.id %>">
    <div class="weather_info">
      <div><%= location.name %></div>
      <div class="weather_condition"><%= location.condition_description.capitalize %></div>
      <div><%= location.feels_like.round %>Â°C</div>
    </div>
    <div class="weather_icon">
      <%= weather_icon(location.condition_icon, location.condition_description) %>
    </div>
  </div>
<% else %>
  <p>No location is configured. Please provide a location in <%= link_to "Preferences", preferences_path %>.</p>
<% end %>